<script>
    document.querySelectorAll('.delete').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const id = this.dataset.id;

            if (confirm("Are you sure you want to delete this drug?")) {
                fetch(`/api/drugs/${id}`, { // đường dẫn trùng route DELETE
                        method: 'DELETE'
                    })
                    .then(res => res.json())
                    .then(data => {
                        alert(data.message); // thông báo tên thuốc vừa xóa
                        location.reload(); // reload lại trang để cập nhật bảng
                    })
                    .catch(err => alert("Error: " + err));
            }
        });
    });
</script>
<!-- add header -->
<%- include('includes/_header') %>
    <!-- end header -->
    <!-- Main section -->
    <main id="main">
        <a href="/add-drug">
            <button id="new">New Drug <i class="fas fa-pills"></i></button>
        </a>

