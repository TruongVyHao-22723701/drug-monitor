                    <th>Taken per Day</th>
                    <th>Daily dosage</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through drugs -->
                <% for(let i = 0; i < drugs.length; i++) {%>
                    <tr>
